@using HD.Station.MediaManagement.Abstractions.Data
@model HD.Station.MediaManagement.Mvc.Features.MediaFile.Models.MediaFileViewModel

@{
    ViewData["Title"] = "Chỉnh sửa Media File";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <div class="card mb-4">
        <div class="card-header">
            <h5>Chỉnh sửa: @Model.FileName</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                @* Hidden fields để giữ nguyên giá trị không cho edit *@
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Hash" />
                <input type="hidden" asp-for="Size" />
                <input type="hidden" asp-for="UploadTime" />
                <input type="hidden" asp-for="MediaInfoJson" />

                <div class="form-group mb-3">
                    <label asp-for="FileName" class="form-label"></label>
                    <input asp-for="FileName" class="form-control" readonly />
                    <small class="text-muted">Tên file không thể thay đổi</small>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="MediaType" class="form-label"></label>
                    <select asp-for="MediaType" class="form-select"
                            asp-items="Html.GetEnumSelectList<MediaTypeEnum>()"></select>
                    <span asp-validation-for="MediaType" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Format" class="form-label"></label>
                    <select asp-for="Format" class="form-select"
                            asp-items="Html.GetEnumSelectList<FormatEnum>()"></select>
                    <span asp-validation-for="Format" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="StoragePath" class="form-label"></label>
                    <input asp-for="StoragePath" class="form-control" />
                    <span asp-validation-for="StoragePath" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Status" class="form-label"></label>
                    <select asp-for="Status" class="form-select"
                            asp-items="Html.GetEnumSelectList<StatusEnum>()"></select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <label class="form-label">@Html.DisplayNameFor(m => m.Size):</label>
                        <p class="form-control-plaintext">@($"{Model.Size / 1024} KB ({Model.Size} bytes)")</p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">@Html.DisplayNameFor(m => m.UploadTime):</label>
                        <p class="form-control-plaintext">@Model.UploadTime.ToString("dd/MM/yyyy HH:mm:ss")</p>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">Quay lại chi tiết</a>
                    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                </div>
            </form>
        </div>
    </div>

    @* Preview cho Image/Video *@
    @if (!string.IsNullOrEmpty(Model.StoragePath)
    && (Model.MediaType == MediaTypeEnum.Image
    || Model.MediaType == MediaTypeEnum.Video))
    {
        <div class="card">
            <div class="card-header">
                <h6>Xem trước File</h6>
            </div>
            <div class="card-body">
                @if (Model.MediaType == MediaTypeEnum.Image)
                {
                    <img src="@Model.StoragePath"
                         class="img-fluid"
                         alt="@Model.FileName"
                         style="max-height:300px;" />
                }
                else
                {
                    <video controls
                           class="w-100"
                           style="max-height:300px;">
                        <source src="@Model.StoragePath" />
                        Trình duyệt không hỗ trợ thẻ video.
                    </video>
                }
            </div>
        </div>
    }
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
